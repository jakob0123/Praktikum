<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DAMONE.Schulungstool</title>
    <link rel="stylesheet" href="~/wwwroot/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/wwwroot/css/site.css" asp-append-version="true" />
    <link href="~/wwwroot/lib/font-awesome/css/all.css" rel="stylesheet" />
    @RenderSection("styles", false)
    <script src="~/wwwroot/lib/jquery/jquery.min.js"></script>
    <script src="~/wwwroot/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/wwwroot/lib/twitter-bootstrap/js/bootstrap.min.js"></script>


</head>
<body>
    <div class="row">
        <div class="btn-group col-10 mb-3">
            <button class="btn btn-outline-secondary col-4" onclick="location.href= '@Url.Action("Index", "Home")'" clicked>Startseite</button>
            <button class="btn btn-outline-secondary col-4" onclick="location.href= '@Url.Action("SeeSchulungen", "Home")'">Schulungen einsehen</button>
            <button class="btn btn-outline-secondary col-4" onclick="location.href= '@Url.Action("AddPowerPoint", "Home")'">Schulung ansehen</button>
            <button class="btn btn-outline-secondary col-4" onclick="location.href= '@Url.Action("AddSignature", "Home")'">Unterschrift hinzufügen</button>
            <button class="btn btn-outline-secondary col-4" onclick="location.href= '@Url.Action("HomeAD", "Home")'">Zu schulende Person auswählen</button>

        </div>
    </div>

    <header>
        <div class="jumbotron header">
            <div class="row align-items-end">
                <img style="margin:0rem 3rem" class="img-fluid col-2" src="~/wwwroot/Images/dam_logo.svg" />
                <div class="col d-flex justify-content-begin align-items-center">
                    <h2 class="display-2">DAM Awarness Training</h2>
                </div>

                <img style="margin:0rem 1rem" class="img-fluid col-2" src="~/wwwroot/Images/dam_squares.png" />
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="jumbotron footer container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row justify-content-center">
                        <div class="d-none d-lg-block">
                            <h3>DAM - Dynamic Assembly Machines</h3>
                        </div>
                        <div class="col-lg d-lg-none">
                            <h4>DAM</h4>
                        </div>
                        <div class="col-lg d-none d-sm-block d-lg-none">
                            <h5>Dynamic Assembly Machines</h5>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="d-none d-lg-block">
                            <h5>Tel.: +43 3112 51 888 – 0 | office@d-a-m.cc | Rupert Gutmann Straße 1 | 8200 Gleisdorf | Austria</h5>
                        </div>
                        <div class="col-6 d-lg-none">
                            <p>Tel.: +43 3112 51 888 – 0</p>
                        </div>
                        <div class="col-6 d-lg-none">
                            <p>office@d-a-m.cc</p>
                        </div>
                        <div class="col-6 d-lg-none">
                            <p>Rupert Gutmann Straße 1</p>
                        </div>
                        <div class="col-6 d-lg-none">
                            <p>A-8200 Gleisdorf</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/site.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
